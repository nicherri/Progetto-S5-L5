@model IEnumerable<ServerPoliziaApp.Models.ViolazioneOver400EuroViewModel>

@{
    ViewData["Title"] = "Violazioni Oltre 400 Euro";
}

<h1>Violazioni Oltre 400 Euro</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome Trasgressore</th>
                <th>Cognome Trasgressore</th>
                <th>Data Violazione</th>
                <th>Importo</th>
                <th>Punti Decurtati</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NomeTrasgressore</td>
                    <td>@item.CognomeTrasgressore</td>
                    <td>@item.DataViolazione.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.Importo</td>
                    <td>@item.PuntiDecurtati</td>
                </tr>
            }
        </tbody>
    </table>
</div>
